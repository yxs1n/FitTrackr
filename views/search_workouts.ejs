<!DOCTYPE html>
<html>
<head>
    <title>Search Workouts - <%= appData.appName %></title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>

<%- include("partials/navbar.ejs") %>
<%- include("partials/flash.ejs") %>

<h1>Search Results for "<%= searchTerm %>"</h1>

<% if (workouts.length === 0) { %>
    <p>No workouts found. Try another search.</p>
<% } else { %>

<table class="workouts-table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Duration</th>
            <th>Calories</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        <% workouts.forEach(workout => { %>
            <tr>
                <td><%= workout.date.toDateString() %></td>
                <td><%= workout.type %></td>
                <td><%= workout.duration %> mins</td>
                <td><%= workout.calories %></td>
                <td><%= workout.notes %></td>
            </tr>
        <% }) %>
    </tbody>
</table>

<% } %>

</body>
</html>